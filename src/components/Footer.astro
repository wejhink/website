---
import Logo from './Logo.astro';

const currentYear = new Date().getFullYear();
---

<footer class="bg-dark text-dark-text">
  <div class="max-w-[1200px] mx-auto px-6 py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
      <div>
        <Logo height={24} inverted class="mb-3" />
        <p class="text-sm text-dark-text/70 leading-relaxed">
          AI-native software that delivers real value.
        </p>
      </div>

      <div>
        <h4 class="text-sm font-semibold uppercase tracking-wider mb-3">Navigation</h4>
        <ul class="space-y-2">
          <li><a href="/" class="text-sm text-dark-text/70 hover:text-dark-text transition-colors duration-200">Home</a></li>
          <li><a href="/about" class="text-sm text-dark-text/70 hover:text-dark-text transition-colors duration-200">About</a></li>
          <li><a href="/blog" class="text-sm text-dark-text/70 hover:text-dark-text transition-colors duration-200">Blog</a></li>
        </ul>
      </div>

      <div>
        <h4 class="text-sm font-semibold uppercase tracking-wider mb-3">Products</h4>
        <ul class="space-y-2">
          <li>
            <a
              href="https://teja.app"
              target="_blank"
              rel="noopener noreferrer"
              class="text-sm text-dark-text/70 hover:text-dark-text transition-colors duration-200"
            >
              Teja &rarr;
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div class="mt-12 pt-8 border-t border-dark-text/10 text-center">
      <p class="text-sm text-dark-text/50">
        &copy; {currentYear} Jhink. All rights reserved.
      </p>
    </div>
  </div>
</footer>
