---
interface Props {
  title: string;
  description: string;
  date: Date;
  slug: string;
  tags?: string[];
}

const { title, description, date, slug, tags = [] } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="group">
  <a href={`/blog/${slug}`} class="block p-6 bg-surface rounded-lg border border-border hover:border-accent/40 transition-colors duration-200">
    <div class="flex items-center gap-3 text-sm text-text-secondary mb-3">
      <time datetime={date.toISOString()}>{formattedDate}</time>
      {tags.length > 0 && (
        <>
          <span class="text-border">&middot;</span>
          <span>{tags[0]}</span>
        </>
      )}
    </div>
    <h3 class="text-lg font-semibold group-hover:text-accent-dark transition-colors duration-200">
      {title}
    </h3>
    <p class="mt-2 text-sm text-text-secondary leading-relaxed">
      {description}
    </p>
  </a>
</article>
